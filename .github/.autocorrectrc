# yaml-language-server: $schema=https://huacnlee.github.io/autocorrect/schema.json
rules:
  # 自动在中日朝（CJK）与英文之间添加空格
  # 0 - 关闭, 1 - 错误, 2 - 警告
  space-word: 1
  # 在某些标点符号之间添加空格
  space-punctuation: 1
  # 当括号 ()、[] 邻近 CJK 时添加空格
  space-bracket: 1
  # 当反引号 `` 邻近 CJK 时添加空格
  space-backticks: 1
  # 在破折号 `-` 之间添加空格
  space-dash: 0
  # 当美元符号 $ 邻近 CJK 时添加空格
  space-dollar: 0
  # 转换为全角
  fullwidth: 1
  # 去掉全角标点附近的空格
  no-space-fullwidth: 1
  # 去掉全角引号 “”、'' 周围的空格
  no-space-fullwidth-quote: 1
  # 全角字母数字转换为半角
  halfwidth-word: 1
  # 英文中的全角标点转换为半角
  halfwidth-punctuation: 1
  # 拼写检查
  spellcheck: 0

# 在特定上下文中启用或禁用
context:
  # 启用或禁用对 Markdown 或 AsciiDoc 等的代码块格式化
  codeblock: 0

